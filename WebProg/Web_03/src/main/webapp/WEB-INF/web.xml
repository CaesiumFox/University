<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>area-check-servlet</servlet-name>
        <servlet-class>io.github.caesiumfox.web2.AreaCheckServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>controller-servlet</servlet-name>
        <servlet-class>io.github.caesiumfox.web2.ControllerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>area-check-servlet</servlet-name>
        <url-pattern>/area.html</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>controller-servlet</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
</web-app>